<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.Views.Detalle">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <!-- Imagen -->
            <Frame WidthRequest="80" HeightRequest="80" CornerRadius="40" BackgroundColor="#E0E0E0" HorizontalOptions="Center">
                <Image x:Name="ImagePreview" Aspect="AspectFill" />
            </Frame>
            <Button Text="Seleccionar Imagen" Clicked="SelectImage_Clicked" HorizontalOptions="Center" Margin="0,10,0,20" />

            <Label Text="Nombre" FontSize="18" />
            <Entry x:Name="Name" Placeholder="Nombre" />

            <Label Text="Apellido" FontSize="18" />
            <Entry x:Name="Last" Placeholder="Apellido" />

            <Label Text="Correo" FontSize="18" />
            <Entry x:Name="gmail" Placeholder="Correo" />

            <Label Text="Teléfono" FontSize="18" />
            <Entry x:Name="tel" Placeholder="Teléfono" />

            <Button x:Name="BtnModificar" Text="Modificar" Clicked="Btn_Modificar" HorizontalOptions="Center" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>